<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/item_app_magin_left">

    <ImageView
        android:id="@+id/item_app_id_im_ic_app"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_error_outline_black_36dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/item_app_magin_left"
        android:layout_marginRight="@dimen/item_app_magin_left"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_app_id_txv_title_app"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/app_name" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_app_id_im_state_app_lock"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_lock_outline_white_48dp" />

</LinearLayout>